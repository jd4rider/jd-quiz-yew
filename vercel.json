{
    "version": 2,
    "builds": [
      {
        "src": "server/index.js",
        "use": "@now/node"
      },
      {
        "src": "dist/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/server/index.js"
        },

        {
          "src": "/api/(.*)",
          "dest": "/server/index.js"
        },

        {
            "src": "/(.*)",
            "dest": "/dist/$1"
        }
    ]
  }